<div class="container main margined-top bg-white">
  <p id="notice"><%= notice %></p>

  <h1>Routines</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @routines.each do |routine| %>
        <tr>
          <td><%= image_tag validate_image(routine.image), class: "routines" %> <%= link_to routine.name, routine %></td>
          <td><%= routine.description %></td>
          <td><%= link_to 'Delete', routine, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Routine', new_routine_path, class: "btn btn-primary gym-button-primary" %> <br><br>
</div>