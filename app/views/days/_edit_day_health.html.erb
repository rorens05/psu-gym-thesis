
<!-- Modal -->
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary gym-button-primary gym-btn-dw" data-toggle="modal" data-target="#exampleModal">
  Edit
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
        <%= form_with(model: @health_status, local: true) do |form| %>
        <% if @health_status.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@health_status.errors.count, "error") %> prohibited this health_status from being saved:</h2>

            <ul>
            <% @health_status.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= form.hidden_field :day_id %>

        <div class="field">
          <%= form.label :height %>
          <%= form.text_field :height %>
        </div>

        <div class="field">
          <%= form.label :weight %>
          <%= form.text_field :weight %>
        </div>

        <div class="field">
          <%= form.label :blood_pressure %>
          <%= form.text_field :blood_pressure %>
        </div>

        <div class="field">
          <%= form.label :sugar %>
          <%= form.number_field :sugar %>
        </div>

        <div class="field">
          <%= form.label :waist_line %>
          <%= form.text_field :waist_line %>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>







      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>