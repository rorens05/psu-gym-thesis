<div class="container main margined-top bg-white">

  <h1>Days</h1>

  <table>
    <thead>
      <tr>
        <th>Day no</th>
        <th>User</th>
        <th>Note</th>
        <th>Date created</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @days.each do |day| %>
        <tr>
          <td><%= link_to "Day " + day.day_no.to_s, day %></td>
          <td><%= image_tag validate_image(day.user.image) %><%= link_to day.user.name, day.user %></td>
          <td><%= limit_string(day.note, 20) %></td>
          <td><%= day.date_created %></td>
          <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Day', new_day_path %>
</div>
