<div class="login">
  <%= form_tag(access_attempt_login_path, method: :post) do %>
    <small style="color: red"><%= flash[:notice] ? flash[:notice] : "" %></small>    
    <div class="form-group">
      <label for="exampleInputEmail1">Username</label>
      <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-check">
    </div>
    <button type="submit" class="btn btn-primary gym-button-primary" style="width: 100%">Submit</button>
  <% end %>
  
</div>